{
  "name": "ConsoGab - Marketplace Gabonaise",
  "short_name": "ConsoGab",
  "description": "Découvrez et contactez les entreprises gabonaises près de chez vous.",

  // --- Propriétés de base et d'affichage ---
  "start_url": "/consumer/home",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "fullscreen"],
  "scope": "/",
  "lang": "fr",
  "dir": "ltr",

  // --- Couleurs et Thème ---
  "background_color": "#ffffff",
  "theme_color": "#2563eb", // Correspond à un bleu (ex: bleu 600 de Tailwind)
  "orientation": "portrait", // Simplifié à 'portrait'

  // --- Icônes (Clarté et Modernité) ---
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    // Icône masquable pour Android
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  // --- Raccourcis (Shortcuts) ---
  "shortcuts": [
    {
      "name": "Découvrir",
      "short_name": "Explorer",
      "description": "Découvrez les entreprises près de chez vous",
      "url": "/consumer/home?source=pwa-shortcut", // Ajout d'un paramètre de tracking
      "icons": [{ "src": "/icons/shortcut-explore.png", "sizes": "96x96" }]
    },
    {
      "name": "Carte",
      "short_name": "Carte",
      "description": "Trouvez les entreprises sur la carte",
      "url": "/consumer/map?source=pwa-shortcut",
      "icons": [{ "src": "/icons/shortcut-map.png", "sizes": "96x96" }]
    },
    {
      "name": "Messages",
      "short_name": "Chat",
      "description": "Accédez à vos conversations business",
      "url": "/messaging?source=pwa-shortcut",
      "icons": [{ "src": "/icons/shortcut-chat.png", "sizes": "96x96" }]
    }
  ],

  // --- Captures d'Écran (Plus de détails) ---
  "screenshots": [
    // La capture 'narrow' est bonne (mobile)
    {
      "src": "/screenshots/home-mobile.webp", // Changé pour WebP (optimisation)
      "sizes": "390x844",
      "type": "image/webp",
      "form_factor": "narrow",
      "label": "Page d'accueil ConsoGab"
    },
    // Ajout d'une capture 'wide' (tablette/desktop)
    {
      "src": "/screenshots/home-desktop.webp",
      "sizes": "1280x800",
      "type": "image/webp",
      "form_factor": "wide",
      "label": "Vue desktop de l'accueil"
    }
  ],

  // --- Fonctionnalités Avancées PWA ---
  "categories": ["business", "shopping", "lifestyle", "utility"], // Ajout de 'utility'
  "protocol_handlers": [
    // Permet d'ouvrir certains liens externes directement dans la PWA (ex: consogab://map/...)
    {
      "protocol": "web+consogab",
      "url": "/?url=%s"
    }
  ],

  // Supprimé "related_applications", "prefer_related_applications", et "edge_side_panel" s'ils ne sont pas strictement nécessaires pour l'MVP.

  "file_handlers": [
    // Optionnel: Permet à la PWA de gérer l'ouverture de certains fichiers
    {
      "action": "/editor",
      "accept": {
        "text/plain": [".txt", ".csv"]
      },
      "icons": [{ "src": "/icons/file-handler.png", "sizes": "256x256" }]
    }
  ]
}
