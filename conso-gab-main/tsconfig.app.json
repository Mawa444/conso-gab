{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* STRICT PROGRESSIF - Phase 1 */
    "strict": false, // ðŸ”„ Ã€ passer Ã  true Phase 2
    "noUnusedLocals": false, // ðŸ”„ Ã€ passer Ã  true Phase 2
    "noUnusedParameters": false, // ðŸ”„ Ã€ passer Ã  true Phase 2
    "noImplicitAny": false, // ðŸ”„ Ã€ passer Ã  true Phase 2

    /* STRICT LÃ‰GER - GardÃ© pour sÃ©curitÃ© basique */
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    /* RESOLUTION */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* DX - AmÃ©lioration expÃ©rience dev */
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}